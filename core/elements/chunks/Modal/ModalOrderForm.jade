.b-popup-window.b-product-window#product-window
    .b-product-window__aside
        .b-product-window__image-wrapper
            a(href!="/{$_modx->resource.uri}")
                img(src="[[+thumb]]" alt='').b-product-window__image
        h4.b-product-window__title
            a(href!='/{$_modx->resource.uri}').b-product-window__title-link {$_modx->resource.pagetitle}
        .b-product-window__description
            p {$_modx->runSnippet('pdoField',['field' => 'pagetitle', 'top' => 1])}

    .b-popup-window__content.b-product-window__content
        .b-popup-window__title Заявка
        form(action="/[[~[[*id]]]]" method="post").js-validation-form
            input(type="text" name="workemail" style="display:none;" value="")
            input(type="hidden", name="p-name", value!="{$_modx->resource.longtitle}")
            input(type="hidden", name="p-id", value!="{$_modx->resource.id}")
            input(type="hidden", name="p-url", value!="[[~[[++site_start]]]]{$_modx->resource.id | url}")
            .g-form-row
                label.g-form-label Введите ваш телефон
                input(type='tel',name="phone" placeholder="+ 375 29 890-90-90" required)
            .g-form-row
                label.g-form-label И оставьте сообщение
                textarea(name="message" placeholder="Есть котел, который употребляет 5 тон в час, нужен клапан который будет регулировать расход. Владимир")
            .g-form-btn-row
                button(type='submit').g-btn.g-btn_large Отправить
