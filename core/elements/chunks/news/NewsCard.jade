.entries__item
    .entries__excerpt
        figure.entry-excerpt__figure
           a(href='/{$id | url}').entry-excerpt__title-link
              img(src='[[+440x320]]' alt='').entry-excerpt__img
        span.entry-excerpt__date [[+publishedon:date=`%d %b %Y`]]
        h3.entry-excerpt__title
           a(href='/{$id | url}').entry-excerpt__title-link {$pagetitle}
        p.entry-excerpt__text [[+introtext]]
